
# top-most EditorConfig file
root                     = true

# Unix-style newlines with a newline ending every file
[*]
charset                  = utf-8
indent_style             = tab
tab_width                = 4
end_of_line              = lf
trim_trailing_whitespace = true
insert_final_newline     = true

# Tab indentation for scss files
[*.scss]
tab_width                = 3

# Space indentation for json files
[*.json]
indent_style             = space
indent_size              = 4

[*.yml]
indent_style             = space
indent_size              = 2
